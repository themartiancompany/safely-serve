{
  "name":
    "cert-tools",
  "version":
    "0.0.1",
  "description":
    "Generates private/public key pairs and X.509 certificates for HTTP web servers using Forge Javascript TLS implementation",
  "funding": {
    "type":
      "patreon",
    "url":
      "https://patreon.com/tallero"
  },
  "man":
    "./man/cert-gen.1",
  "files": [
    "AUTHORS.rst",
    "COPYING",
    "README.md",
    "eslint.config.mjs",
    "package.json",
    "cert-gen.js",
    "cert-gen",
    "fs-worker.js",
    "fs-worker.webpack.config.cjs",
    "index.html",
    "libcert-gen",
    "libcert-gen.webpack.config.cjs",
    "serve.json",
    "webpack.config.cjs"
  ],
  "keywords": [
    "forge",
    "ur",
    "themartiancompany",
    "dogeos"
  ],
  "homepage":
    "https://github.com/themartiancompany/cert-tools",
  "bugs": {
    "url":
      "https://github.com/themartiancompany/cert-tools/issues"
  },
  "repository": {
    "type":
      "git",
    "url":
      "git+https://github.com/themartiancompany/cert-tools.git"
  },
  "license":
    "AGPL-3.0-or-later",
  "author": {
    "name":
      "Pellegrino Prevete",
    "email":
      "pellegrinoprevete@gmail.com",
    "url":
      "https://github.com/tallero"
  },
  "devDependencies": {
    "crash-js-webpack":
      "^0.0.3",
    "eslint":
      "^9.32.0",
    "parcel":
      "^2.16.0",
    "webpack":
      "^5.102.1",
    "webpack-cli":
      "^6.0.1"
  },
  "dependencies": {
    "crash-js":
      "^0.1.66",
    "forge":
      "^1.3.1"
  },
  "type":
    "commonjs",
  "main":
    "cert-gen",
  "scripts": {
    "build-fs-worker":
      "npx webpack --mode 'production' --config 'fs-worker.webpack.config.cjs' --stats-error-details",
    "build-lib":
      "npx webpack --mode 'production' --config 'libcert-gen.webpack.config.cjs' --stats-error-details",
    "build-bin":
      "npx webpack --mode 'production' --config 'webpack.config.cjs' --stats-error-details",
    "build":
      "npm run lint && npm run build-fs-worker && npm run build-lib && npm run build-bin",
    "lint":
      "npx eslint .",
    "publish-pnm":
      "npm run build && npm publish --access public",
    "start":
      "npx parcel serve index.html --port 3000 --https --no-cache",
    "test":
      "echo \"Error: no test specified\" && exit 1"
  }
}
